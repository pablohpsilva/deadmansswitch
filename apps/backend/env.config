# Dead Man's Switch Backend Configuration
# Self-hosted Email Server Configuration
# COPY THIS TO .env FILE

# === DATABASE CONFIGURATION ===
DATABASE_URL=postgresql://postgres:your_secure_password_change_me@localhost:5432/deadmansswitch
POSTGRES_PASSWORD=your_secure_password_change_me

# === SECURITY CONFIGURATION ===
JWT_SECRET=your-jwt-secret-change-in-production-make-it-very-long-and-secure
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# === SERVER CONFIGURATION ===
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# === SELF-HOSTED EMAIL CONFIGURATION ===
# Your email server domain (replace yourdomain.com with your actual domain)
SMTP_HOST=mail.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=password123

# SMTP Settings
SMTP_SECURE=false
SMTP_REJECT_UNAUTHORIZED=false
SMTP_DEBUG=true

# Email Sender Configuration
FROM_EMAIL=noreply@yourdomain.com
DOMAIN=yourdomain.com

# === ROUNDCUBE WEBMAIL (OPTIONAL) ===
ROUNDCUBE_DB_PASSWORD=secure_roundcube_password_here

# === STRIPE CONFIGURATION (FOR PAYMENTS) ===
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# === NOSTR CONFIGURATION ===
DEFAULT_NOSTR_RELAYS=wss://relay.damus.io,wss://nos.lol,wss://relay.nostr.band
